<Window x:Class="RotaceCastic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RotaceCastic"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Canvas x:Name="ParticleCanvas" Width="800" Height="500" Background="Black" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Start" Click="StartButton_Click" Margin="5" />
            <Button Content="Stop" Click="StopButton_Click" Margin="5" />
        </StackPanel>

    </Grid>
</Window>
